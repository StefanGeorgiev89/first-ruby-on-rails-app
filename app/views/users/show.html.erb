<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.cookingposts.any? %>
      <h3>Cookingposts (<%= @user.cookingposts.count %>)</h3>
      <ol class="cookingposts">
        <%= render @cookingposts %>
      </ol>
      <%= will_paginate @cookingposts %>
    <% end %>
  </div>
</div>